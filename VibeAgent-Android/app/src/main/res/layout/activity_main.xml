<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary"
    tools:context=".MainActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg_secondary"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Hamburger Menu Button -->
        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_menu"
            android:padding="8dp"
            android:layout_marginEnd="12dp"
            app:tint="@color/text_primary" />

        <!-- App Icon (Display Only) -->
        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_gradient_rounded">
            
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_zap"
                app:tint="@android:color/white" />
        </FrameLayout>

        <!-- App Title & Status -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_lg"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/bg_gradient_circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/online"
                    android:textColor="@color/text_tertiary"
                    android:textSize="@dimen/text_xs" />
            </LinearLayout>
        </LinearLayout>

        <!-- Connect Wallet Button -->
        <LinearLayout
            android:id="@+id/btnConnectWallet"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/bg_connect_wallet"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_link"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/textConnectWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Connect"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Wallet Status Bar (shown when connected) -->
    <LinearLayout
        android:id="@+id/walletStatusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_secondary"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/headerContainer">

        <!-- Wallet Icon -->
        <FrameLayout
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_gradient_circle">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_wallet"
                app:tint="@android:color/white" />
        </FrameLayout>

        <!-- Address -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textWalletAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0x1234...abcd"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BSC Testnet"
                android:textColor="@color/success"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Balance -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/textWalletBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0000 BNB"
                android:textColor="@color/primary_yellow"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textBalanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:textColor="@color/text_tertiary"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Refresh Button -->
        <ImageView
            android:id="@+id/btnRefreshBalance"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_refresh"
            app:tint="@color/text_secondary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Chat Messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMessages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/padding_lg"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/walletStatusBar"
        app:layout_constraintBottom_toTopOf="@id/quickActionsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Quick Actions -->
    <HorizontalScrollView
        android:id="@+id/quickActionsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@color/bg_secondary"
        android:paddingHorizontal="@dimen/padding_lg"
        android:paddingVertical="@dimen/padding_sm"
        app:layout_constraintBottom_toTopOf="@id/inputContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/quickActionsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <!-- Cek Saldo -->
            <LinearLayout
                android:id="@+id/btnCheckBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_quick_action"
                android:paddingHorizontal="@dimen/padding_md"
                android:paddingVertical="@dimen/padding_sm"
                android:layout_marginEnd="@dimen/padding_sm">

                <FrameLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bg_gradient_circle">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_search"
                        app:tint="@android:color/white" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/check_balance"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_sm" />
            </LinearLayout>

            <!-- Kirim BNB -->
            <LinearLayout
                android:id="@+id/btnSendBnb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_quick_action"
                android:paddingHorizontal="@dimen/padding_md"
                android:paddingVertical="@dimen/padding_sm"
                android:layout_marginEnd="@dimen/padding_sm">

                <FrameLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bg_gradient_circle">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_send"
                        app:tint="@android:color/white" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/send_bnb"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_sm" />
            </LinearLayout>

            <!-- Analisis AI -->
            <LinearLayout
                android:id="@+id/btnAnalyze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_quick_action"
                android:paddingHorizontal="@dimen/padding_md"
                android:paddingVertical="@dimen/padding_sm"
                android:layout_marginEnd="@dimen/padding_sm">

                <FrameLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bg_gradient_circle">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_zap"
                        app:tint="@android:color/white" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Analisis AI"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_sm" />
            </LinearLayout>

            <!-- Bantuan -->
            <LinearLayout
                android:id="@+id/btnHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_quick_action"
                android:paddingHorizontal="@dimen/padding_md"
                android:paddingVertical="@dimen/padding_sm">

                <FrameLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bg_gradient_circle">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_help"
                        app:tint="@android:color/white" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/help"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_sm" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Input Area -->
    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_md"
        android:background="@color/bg_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/editMessage"
            android:layout_width="0dp"
            android:layout_height="@dimen/input_height"
            android:layout_weight="1"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="@dimen/padding_lg"
            android:hint="@string/hint_message"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:textSize="@dimen/text_md"
            android:inputType="text"
            android:imeOptions="actionSend"
            android:maxLines="1" />

        <!-- Mic Button -->
        <FrameLayout
            android:id="@+id/btnMic"
            android:layout_width="@dimen/input_height"
            android:layout_height="@dimen/input_height"
            android:layout_marginStart="@dimen/padding_sm"
            android:background="@drawable/bg_mic_button">

            <ImageView
                android:id="@+id/imgMic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_mic"
                app:tint="@android:color/white" />
        </FrameLayout>

        <!-- Send Button -->
        <FrameLayout
            android:id="@+id/btnSend"
            android:layout_width="@dimen/input_height"
            android:layout_height="@dimen/input_height"
            android:layout_marginStart="@dimen/padding_sm"
            android:background="@drawable/bg_send_button">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_send"
                app:tint="@android:color/white" />
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
