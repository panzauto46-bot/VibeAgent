<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#030712"
    android:padding="24dp">

    <!-- Background Gradient Effects -->
    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bg_gradient_blur_orange"
        android:alpha="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:translationX="-100dp"
        android:translationY="-100dp"/>

    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bg_gradient_blur_yellow"
        android:alpha="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationX="100dp"
        android:translationY="100dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="32dp">

            <!-- Logo Section -->
            <FrameLayout
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/bg_gradient_rounded">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_zap"
                    app:tint="@android:color/white" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="VibeAgent"
                android:textColor="@color/primary_yellow"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI Financial Assistant"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <!-- MAIN AUTH CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_card_dark"
                android:orientation="vertical"
                android:padding="24dp"
                android:elevation="8dp">

                <!-- Dynamic Title -->
                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selamat Datang! ðŸ‘‹"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Masuk ke akun Anda untuk melanjutkan"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginBottom="20dp"/>

                <!-- Google Button -->
                <LinearLayout
                    android:id="@+id/btnGoogle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_btn_google"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_google_sign_in"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/textGoogleBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Masuk dengan Google"
                        android:textColor="#1F2937"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- ======= WALLET BUTTONS (New) ======= -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <!-- Import Phrase Button -->
                    <LinearLayout
                        android:id="@+id/btnImportPhrase"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_btn_outline"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_marginEnd="6dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_key"
                            app:tint="@color/primary_yellow"
                            android:layout_marginEnd="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Import Phrase"
                            android:textColor="@color/primary_yellow"
                            android:textStyle="bold"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Create Wallet Button -->
                    <LinearLayout
                        android:id="@+id/btnCreateWalletAuth"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_btn_outline"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_marginStart="6dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_wallet"
                            app:tint="@color/primary_yellow"
                            android:layout_marginEnd="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buat Wallet"
                            android:textColor="@color/primary_yellow"
                            android:textStyle="bold"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Divider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#374151" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:text="ATAU"
                        android:textColor="@color/text_tertiary"
                        android:textSize="10sp"
                        android:letterSpacing="0.1" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#374151" />
                </LinearLayout>

                <!-- ======= LOGIN FORM ======= -->
                <LinearLayout
                    android:id="@+id/loginForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginBottom="6dp"/>
                    <EditText
                        android:id="@+id/editLoginEmail"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input_dark"
                        android:paddingHorizontal="16dp"
                        android:hint="contoh@email.com"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:textSize="14sp"
                        android:inputType="textEmailAddress"
                        android:drawableStart="@android:drawable/ic_dialog_email"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/text_secondary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="6dp"/>
                    <EditText
                        android:id="@+id/editLoginPassword"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input_dark"
                        android:paddingHorizontal="16dp"
                        android:hint="Masukkan password"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:textSize="14sp"
                        android:inputType="textPassword"
                        android:drawableStart="@android:drawable/ic_lock_idle_lock"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/btnForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="end"
                        android:text="Lupa password?"
                        android:textColor="@color/primary_yellow"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btnLoginSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/bg_btn_gradient"
                        android:text="Masuk"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- ======= REGISTER FORM ======= -->
                <LinearLayout
                    android:id="@+id/registerForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Lengkap"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginBottom="6dp"/>
                    <EditText
                        android:id="@+id/editRegisterName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input_dark"
                        android:paddingHorizontal="16dp"
                        android:hint="Masukkan nama lengkap"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:textSize="14sp"
                        android:inputType="textPersonName"
                        android:drawableStart="@drawable/ic_user_placeholder"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/text_secondary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="6dp"/>
                    <EditText
                        android:id="@+id/editRegisterEmail"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input_dark"
                        android:paddingHorizontal="16dp"
                        android:hint="contoh@email.com"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:textSize="14sp"
                        android:inputType="textEmailAddress"
                        android:drawableStart="@android:drawable/ic_dialog_email"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/text_secondary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="6dp"/>
                    <EditText
                        android:id="@+id/editRegisterPassword"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input_dark"
                        android:paddingHorizontal="16dp"
                        android:hint="Minimal 6 karakter"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:textSize="14sp"
                        android:inputType="textPassword"
                        android:drawableStart="@android:drawable/ic_lock_idle_lock"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/text_secondary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Konfirmasi Password"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="6dp"/>
                    <EditText
                        android:id="@+id/editRegisterConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input_dark"
                        android:paddingHorizontal="16dp"
                        android:hint="Ulangi password"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:textSize="14sp"
                        android:inputType="textPassword"
                        android:drawableStart="@android:drawable/ic_lock_idle_lock"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/textPasswordMatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:visibility="gone"
                        android:textSize="10sp"
                        android:text="Password cocok"
                        android:textColor="@android:color/holo_green_dark"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="top">
                        <CheckBox
                            android:id="@+id/checkTerms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/primary_orange"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saya setuju dengan Syarat &amp; Ketentuan dan Kebijakan Privasi"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnRegisterSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/bg_btn_gradient"
                        android:text="Daftar Sekarang"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- ======= IMPORT PHRASE FORM (New!) ======= -->
                <LinearLayout
                    android:id="@+id/phraseForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seed Phrase / Recovery Phrase"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginBottom="6dp"/>

                    <EditText
                        android:id="@+id/editSeedPhrase"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/bg_input_dark"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:hint="Masukkan 12 atau 24 kata seed phrase Anda, dipisahkan dengan spasi..."
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:textSize="14sp"
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:fontFamily="monospace"
                        android:lineSpacingMultiplier="1.4"
                        android:maxLines="5" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="âš ï¸ Seed phrase Anda hanya disimpan di perangkat ini (encrypted) dan tidak dikirim ke server manapun."
                        android:textColor="@color/text_tertiary"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="ðŸ” Disimpan dengan EncryptedSharedPreferences (AES-256)"
                        android:textColor="@color/text_tertiary"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/btnImportSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/bg_btn_gradient"
                        android:text="ðŸ”— Import &amp; Connect"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- TOGGLE AREA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/textToggleHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Belum punya akun?"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/btnToggleAuth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Daftar sekarang"
                        android:textColor="@color/primary_yellow"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Footer -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="VibeAgent v1.0 â€¢ BSC Mainnet â€¢ Powered by AI"
                android:textColor="@color/text_tertiary"
                android:textSize="10sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
