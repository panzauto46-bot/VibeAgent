<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Handle Bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_card_dark" />

    <!-- Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_gradient_rounded">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_link"
                app:tint="@android:color/white" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Connect Wallet"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose a wallet to connect or enter a wallet address manually."
        android:textColor="@color/text_secondary"
        android:textSize="13sp"
        android:layout_marginBottom="20dp" />

    <!-- Wallet List -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOT WALLETS"
        android:textColor="@color/text_tertiary"
        android:textSize="10sp"
        android:textAllCaps="true"
        android:letterSpacing="0.1"
        android:layout_marginBottom="8dp" />

    <!-- Trust Wallet -->
    <LinearLayout
        android:id="@+id/btnTrustWallet"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_wallet_item"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="6dp">

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="ðŸ›¡ï¸"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trust Wallet"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multi-chain wallet"
                android:textColor="@color/text_tertiary"
                android:textSize="11sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/text_tertiary" />
    </LinearLayout>

    <!-- MetaMask -->
    <LinearLayout
        android:id="@+id/btnMetaMask"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_wallet_item"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="6dp">

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="ðŸ¦Š"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MetaMask"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ethereum &amp; EVM"
                android:textColor="@color/text_tertiary"
                android:textSize="11sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/text_tertiary" />
    </LinearLayout>

    <!-- Binance Wallet -->
    <LinearLayout
        android:id="@+id/btnBinanceWallet"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_wallet_item"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="6dp">

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="ðŸ’Ž"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Binance Wallet"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Binance Web3 Wallet"
                android:textColor="@color/text_tertiary"
                android:textSize="11sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/text_tertiary" />
    </LinearLayout>

    <!-- OKX Wallet -->
    <LinearLayout
        android:id="@+id/btnOkxWallet"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_wallet_item"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="6dp">

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="â­•"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OKX Wallet"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OKX Web3 Wallet"
                android:textColor="@color/text_tertiary"
                android:textSize="11sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/text_tertiary" />
    </LinearLayout>

    <!-- Bitget Wallet -->
    <LinearLayout
        android:id="@+id/btnBitgetWallet"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_wallet_item"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="6dp">

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="ðŸ”µ"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bitget Wallet"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bitget Web3 Wallet"
                android:textColor="@color/text_tertiary"
                android:textSize="11sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/text_tertiary" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border_primary"
        android:layout_marginVertical="16dp" />

    <!-- Manual Input Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR ENTER ADDRESS MANUALLY"
        android:textColor="@color/text_tertiary"
        android:textSize="10sp"
        android:textAllCaps="true"
        android:letterSpacing="0.1"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/editWalletAddress"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_address_input"
            android:paddingHorizontal="14dp"
            android:hint="0x1234...abcd"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:textSize="13sp"
            android:fontFamily="monospace"
            android:inputType="text"
            android:singleLine="true"
            android:maxLines="1" />

        <FrameLayout
            android:id="@+id/btnPasteAddress"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_wallet_item">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_copy"
                app:tint="@color/text_secondary" />
        </FrameLayout>
    </LinearLayout>

    <!-- Connect Button -->
    <FrameLayout
        android:id="@+id/btnConnectManual"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_connect_wallet">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ðŸ”—  Connect Wallet"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- Create New Wallet -->
    <LinearLayout
        android:id="@+id/btnCreateNewWallet"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/bg_wallet_item">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_wallet"
            app:tint="@color/primary_yellow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Create New Wallet"
            android:textColor="@color/primary_yellow"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
